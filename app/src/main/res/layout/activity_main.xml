<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:id="@+id/header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_casio_logo"
                tools:ignore="contentDescription"
                app:tint="?colorOnSecondary"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calculator"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="?colorOnSecondary"
                android:fontFamily="@font/inter_bold"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="?colorOnBackground"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="?colorOnBackground"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="?colorOnBackground"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"/>

            <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="?colorOnBackground"
                android:layout_marginStart="0.5dp"
                android:layout_marginEnd="0.5dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/polygon"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="60+360"
        android:textAlignment="viewEnd"
        android:paddingHorizontal="15dp"
        android:textColor="?colorOnSurface"
        android:id="@+id/calculation_tv"
        tools:ignore="hardCodedText"
        android:lines="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/display_tv"
        android:layout_marginBottom="-1dp"
        android:id="@+id/polygon">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_polygon"
            android:scaleType="centerCrop"
            android:paddingHorizontal="-1dp"
            app:tint="?colorPrimaryVariant"
            tools:ignore="contentDescription"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_polygon_border"
            android:scaleType="centerCrop"
            android:layout_marginStart="-10dp"
            tools:ignore="contentDescription"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="56sp"
        android:textStyle="bold"
        android:textAlignment="viewEnd"
        android:background="?colorPrimaryVariant"
        app:layout_constraintBottom_toTopOf="@id/dividerContainer"
        android:text="420"
        android:textColor="@color/white"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:id="@+id/display_tv"
        tools:ignore="hardCodedText"
        android:lines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/btnContainer"
        android:id="@+id/dividerContainer">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?colorSecondary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?colorSecondaryVariant"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btnContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="C"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:textFontWeight="500"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnClr"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="+/-"
                android:textFontWeight="500"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnSign"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="%"
                android:textFontWeight="500"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnPercent"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_backspace"
                tools:ignore="OnClick,contentDescription"
                android:onClick="backBtnPressed"
                android:scaleType="centerInside"
                android:id="@+id/btnBack"
                app:tint="?colorOnPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="7"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnSeven"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="8"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnEight"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="9"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnNine"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="/"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnDivide"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="4"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnFour"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="5"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnFive"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="6"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnSix"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="x"
                android:textAllCaps="false"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnMultiply"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="1"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnOne"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="2"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnTwo"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="3"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnThree"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="-"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnSubtract"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="."
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnDecimal"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="0"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="numBtnPressed"
                android:id="@+id/btnZero"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="="
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnEqual"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="+"
                tools:ignore="OnClick,hardCodedText"
                android:textSize="20sp"
                android:onClick="calcBtnPressed"
                android:id="@+id/btnAdd"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>